<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{contents}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
  
</div>


<form class="comments">
  <h2>Comment on post</h2>
  <textarea id="post-comment"></textarea>
  <button>Upload comment</button>
</form>

{{#each comment as |comment| }}
<div class="row mb-4 project">
  <div class="col-md-12">
    <h2>{{comment.content}}</h2>
    <h3>{{comment.user.id}}</h3>
</div>
{{/each}}

<script src="/js/comment.js"></script>